---
interface Props {
	title?: string;
	subtitle?: string;
	description?: string;
}

const {
	title = "Lorep Ipsum",
	subtitle = "Lorem ipsum",
	description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
} = Astro.props;
---

<div
	class="relative w-full max-w-sm border border-white rounded-3xl overflow-hidden flex flex-col bg-black/20 backdrop-blur-sm hover:bg-white/10 transition-colors duration-300 group"
>
	<div class="p-8 flex flex-col gap-4">
		<div class="flex items-center justify-between">
			<h3
				class="text-white text-2xl md:text-3xl font-medium font-['Inter'] leading-normal"
			>
				{title}
			</h3>
			<div class="w-10 h-10 flex items-center justify-center">
				<svg
					width="45"
					height="44"
					viewBox="0 0 45 44"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					class="w-full h-full"
				>
					<path
						d="M22.5 2L27.5 16.5L42 11L33 22L42 33L27.5 27.5L22.5 42L17.5 27.5L3 33L12 22L3 11L17.5 16.5L22.5 2Z"
						fill="white"></path>
				</svg>
			</div>
		</div>

		<p
			class="text-white text-lg font-light font-['Inter'] opacity-80 border border-white/40 rounded-full px-4 py-2 inline-block w-fit"
		>
			{subtitle}
		</p>

		<p
			class="text-white text-base font-light font-['Inter'] leading-relaxed opacity-70"
		>
			{description}
		</p>
	</div>

	<div
		class="relative w-full aspect-4/3 mt-auto overflow-hidden border-radius-full"
	>
		<img
			src="https://placehold.co/413x360/1a1a1a/ffffff?text=Project+Image"
			alt={title}
			class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
		/>
		<div
			class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent"
		>
		</div>
		<div
			class="absolute bottom-8 right-8 w-6 h-12 flex items-center justify-center"
		>
			<svg
				width="23"
				height="46"
				viewBox="0 0 23 46"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
				class="w-full h-full"
			>
				<path
					d="M5 5L18 23L5 41"
					stroke="white"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"></path>
			</svg>
		</div>
	</div>
</div>
